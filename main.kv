#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import FadeTransition kivy.uix.screenmanager.FadeTransition

# Set colors
#:set darkGray get_color_from_hex("#212121")
#:set lightGray get_color_from_hex("#718089")
#:set darkBlue get_color_from_hex("#155075") 
#:set lightBlue get_color_from_hex("#2b96d4")
#:set orange get_color_from_hex("#F7C14C")
#:set white get_color_from_hex("#FFFFFF")
#:set black get_color_from_hex("#000000")

# Set Variables
#:set card_elevation 20
#:set topMetrics 50
#:set subtext_height 0.2
#:set topIconSize 30
#:set supportTextHeight 0.20
#:set buttonSizeHint (0.7,0.7)
#:set containerPadding 10
#:set metricButtonColor get_color_from_hex("#718089")
#:set metricLabelTextColor get_color_from_hex("#FFFFFF")
#:set metricContainerBackground get_color_from_hex("#212121")
#:set metricLabelBackground get_color_from_hex("#155075") 

# Load other KV Files
#: include frames/historyEntry.kv
#: include frames/vulnPanel.kv
#: include frames/safePanel.kv
#: include frames/reportDashboard.kv
#: include frames/myContent.kv


MDBoxLayout:
    orientation: 'vertical'

    MDToolbar:
        title: "[b]Title ng SP KO[/b]"
        md_bg_color: darkBlue
        left_action_items: [["menu", lambda x: app.openRail()]]

    MDBoxLayout:

        MDNavigationRail:
            id: rail
            use_resizeable: True
            md_bg_color: darkGray
            color_normal: lightGray
            color_active: orange

            use_hover_behavior: True
            hover_bg: 0, 0, 0, .3

            MDNavigationRailItem:
                icon: 'view-dashboard'
                text: '[b]Dashboard[/b]'
                on_release:
                    screenManager.current = "dashboardScreen"

            MDNavigationRailItem:
                icon: 'radar'
                text: '[b]Scan[/b]'
                on_release:
                    screenManager.current = "scanScreen"

            MDNavigationRailItem:
                icon: 'clipboard-clock-outline'
                text: '[b]History[/b]'
                on_release:
                    screenManager.current = "historyScreen"
                    app.generateHistoryEntries()
            
            MDNavigationRailItem:
                icon: 'calculator-variant'
                text: '[b]Risk Calculator[/b]'
                on_release:
                    screenManager.current = "calculatorScreen"
  
                    
            MDNavigationRailItem:
                icon: 'exit-to-app'
                text: '[b]Exit[/b]'
                on_release:
                    app.stop()

        MDBoxLayout:
            orientation: 'vertical'

            ScreenManager:
                id: screenManager


                # Screen for Dashboard              ===============================================
                MDScreen:
                    name: "dashboardScreen"
                    md_bg_color: black

                    # Box Containing Report Data, attach ReportDashboard here
                    MDBoxLayout:
                        id: reportBox
                        md_bg_color: black

                        AnchorLayout:
                            MDBoxLayout:
                                size_hint_y: 0.25
                                orientation: 'vertical'
                                spacing: 20
                                
                                MDIcon:
                                    icon: 'alert-octagon'
                                    halign: 'center'
                                    theme_text_color: "Custom"
                                    text_color: orange
                                    font_size: 70
                                MDLabel:
                                    markup: True
                                    font_size: 50
                                    text: '[b]No Report Generated Yet[/b]'
                                    halign: 'center'
                                    theme_text_color: 'Custom'
                                    text_color: orange

                # Screen for Scan               ================================================
                MDScreen:
                    id: scanScreen
                    name: "scanScreen"
                    md_bg_color: black
                    
                    AnchorLayout:

                        MDBoxLayout:
                            size_hint_y: 0.5
                            orientation: 'vertical'
                            
                            MDBoxLayout:
                                # Scan Icon
                                MDIcon:
                                    icon: 'radar'
                                    theme_text_color: "Custom"
                                    text_color: orange
                                    halign: 'center'
                                    font_size: 90

                            # Input Box and Button
                            MDBoxLayout:
                                pos_hint: {'center_x': 0.5}
                                orientaion: 'horizontal'
                                spacing: 40
                                size_hint_x: 0.7

                                MDBoxLayout:
                                    size_hint_x: 0.7

                                    # Input Box for Putting Scan Name 
                                    MDTextFieldRound:
                                        pos_hint: {'center_x': 0.5,'center_y': 0.5}
                                        id: scanName
                                        font_size: 30
                                        multiline: False
                                        hint_text: "Input scan name here"
                                        normal_color: white
                                        theme_text_color: "Custom"
                                        text_color: lightBlue
                                        required: True

                                MDBoxLayout:
                                    size_hint_x: 0.3

                                    # Button for Scanning
                                    MDRaisedButton:
                                        markup: True
                                        pos_hint: {'center_x': 0.5,'center_y': 0.5}
                                        md_bg_color: orange
                                        text: '[color=#212121][b]Scan my Network[/b][/color]'
                                        font_size: 20
                                        on_release: app.startScan()
                            
                            # Box for Prompts
                            MDBoxLayout:
                                markup: True
                                id: labelContainer
                                pos_hint: {'center_x': 0.5}
                                size_hint_x: 0.7

                # Screen for History             ================================================
                MDScreen:
                    name: "historyScreen"
                    md_bg_color: black

                    # For scroling through history entries
                    ScrollView:
                        do_scroll_y: True
                        
                        # Grid Containing History Entries 
                        MDGridLayout:
                            id: historyGrid
                            adaptive_height: True
                            size_hint_x: 1.0     
                            size_hint_y: None    
                            cols: 1
                            padding: 50
                            spacing: 30
                            

                # Screen for CVE Risk Calculator ================================================
                MDScreen:
                    name: "calculatorScreen"
                    md_bg_color: black

                    MDBoxLayout:
                        orientation:'vertical'

                        # Vector Display Portion
                        MDBoxLayout:
                            size_hint_y: 0.15

                            MDLabel:
                                id: calcRisk
                                theme_text_color: "Custom"
                                text_color: orange
                                markup: True
                                font_size: 30
                                halign: 'center'
                                text: '[b]Risk Score: 0.0[/b]'

                        # Header's Portions
                        MDBoxLayout:
                            size_hint_y: 0.15
                            orientation: 'horizontal'
                            spacing: 80
                            padding: 25

                            MDBoxLayout:
                                md_bg_color: darkGray
                                spacing: 30
                                MDIcon:
                                    size_hint_x: 0.3
                                    icon: 'transit-connection-variant'
                                    halign: 'right'
                                    theme_text_color: "Custom"
                                    text_color: white

                                MDLabel:
                                    size_hint_x: 0.7
                                    halign: 'left'
                                    markup: True
                                    theme_text_color: "Custom"fa
                                    text: '[b]Probability Metrics[b]'
                                    font_style: 'H5'
                                    theme_text_color: "Custom"  
                                    text_color: white

                            MDBoxLayout:
                                md_bg_color: darkGray
                                spacing: 30

                                MDIcon:
                                    size_hint_x: 0.3
                                    icon: 'close-network'
                                    halign: 'right'
                                    theme_text_color: "Custom"
                                    text_color: white


                                MDLabel:
                                    size_hint_x: 0.7
                                    halign: 'left'
                                    markup: True
                                    theme_text_color: "Custsom"
                                    text: '[b]Impact Metrics[/b]'
                                    font_style: 'H5'
                                    theme_text_color: "Custom"  
                                    text_color: white


                        # Metric Selection Portion
                        MDBoxLayout:
                            size_hint_y: 0.7
                            spacing: 30

                            # Left Box for Probability Metrics
                            MDBoxLayout:
                                orientation: 'vertical'
                                padding: 15

                                # Metrics
                                MDBoxLayout:
                                    orientation: 'vertical'

                                    # Container for Access Vector Metric
                                    MDBoxLayout:
                                        orientation: 'vertical'
                                        padding: containerPadding

                                        MDBoxLayout:
                                            size_hint_y: 0.3
                                            md_bg_color: metricLabelBackground
                                            spacing: 10
                                            
                                            MDIcon:
                                                size_hint_x: 0.40
                                                icon: 'lan-connect'
                                                halign: 'right'
                                                theme_text_color: "Custom"
                                                text_color: white

                                            MDLabel:
                                                size_hint_x: 0.6
                                                halign: 'left'
                                                markup: True
                                                text: '[b]Access Vector Metric[/b]'
                                                theme_text_color: "Custom"
                                                text_color: metricLabelTextColor
                                                md_bg_color: metricLabelBackground

                                        MDBoxLayout:
                                            size_hint_y: 0.6
                                            spacing: 20
                                            padding: 10
                                            md_bg_color: metricContainerBackground


                                            MDBoxLayout:

                                                Button:
                                                    text: "Local"
                                                    size_hint: buttonSizeHint
                                                    pos_hint: {'center_x': 0.5,'center_y': 0.5}
                                                    background_color: metricButtonColor
                                                    on_release: app.setAccessVector('L')


                                            MDBoxLayout:

                                                Button:
                                                    text: "Adjacent Network"
                                                    size_hint: buttonSizeHint
                                                    pos_hint: {'center_x': 0.5,'center_y': 0.5}
                                                    background_color: metricButtonColor
                                                    on_release: app.setAccessVector('A')


                                            MDBoxLayout:

                                                Button:
                                                    text: "Network"
                                                    size_hint: buttonSizeHint
                                                    pos_hint: {'center_x': 0.5,'center_y': 0.5}
                                                    background_color: metricButtonColor
                                                    on_release: app.setAccessVector('N')

                                    
                                    # Container for Access Complexity Metric
                                    MDBoxLayout:
                                        orientation: 'vertical'
                                        padding: containerPadding

                                        MDBoxLayout:
                                            size_hint_y: 0.3
                                            md_bg_color: metricLabelBackground
                                            spacing: 10

                                            MDIcon:
                                                size_hint_x: 0.40
                                                icon: 'security-network'
                                                halign: 'right'
                                                theme_text_color: "Custom"
                                                text_color: white

                                            MDLabel:
                                                size_hint_x: 0.6
                                                halign: 'left'
                                                markup: True
                                                text: '[b]Access Complexity  Metric[/b]'
                                                theme_text_color: "Custom"
                                                text_color: metricLabelTextColor
                                                md_bg_color: metricLabelBackground


                                        MDBoxLayout:
                                            size_hint_y: 0.6
                                            spacing: 20
                                            padding: 10
                                            md_bg_color: metricContainerBackground


                                            MDBoxLayout:

                                                Button:
                                                    text: "High Complexity"
                                                    size_hint: buttonSizeHint
                                                    pos_hint: {'center_x': 0.5,'center_y': 0.5}
                                                    background_color: metricButtonColor
                                                    on_release: app.setAccessComplexity('H')


                                            MDBoxLayout:

                                                Button:
                                                    text: "Medium Complexity"
                                                    size_hint: buttonSizeHint
                                                    pos_hint: {'center_x': 0.5,'center_y': 0.5}
                                                    background_color: metricButtonColor
                                                    on_release: app.setAccessComplexity('M')


                                            MDBoxLayout:
                                                Button:
                                                    text: "Low Complexity"
                                                    size_hint: buttonSizeHint
                                                    pos_hint: {'center_x': 0.5,'center_y': 0.5}
                                                    background_color: metricButtonColor
                                                    on_release: app.setAccessComplexity('L')


                                    # Container for Authentication Metrics
                                    MDBoxLayout:
                                        orientation: 'vertical'
                                        padding: containerPadding

                                        MDBoxLayout:
                                            size_hint_y: 0.3
                                            md_bg_color: metricLabelBackground
                                            spacing: 10
                                            
                                            MDIcon:
                                                size_hint_x: 0.40
                                                icon: 'lock-question'
                                                halign: 'right'
                                                theme_text_color: "Custom"
                                                text_color: white

                                            MDLabel:
                                                size_hint_x: 0.6
                                                halign: 'left'
                                                markup: True
                                                text: '[b]Authentication Metric[/b]'
                                                theme_text_color: "Custom"
                                                text_color: metricLabelTextColor
                                                md_bg_color: metricLabelBackground


                                        MDBoxLayout:
                                            size_hint_y: 0.6
                                            spacing: 20
                                            padding: 10
                                            md_bg_color: metricContainerBackground


                                            MDBoxLayout:

                                                Button:
                                                    text: "Multiple"
                                                    size_hint: buttonSizeHint
                                                    pos_hint: {'center_x': 0.5,'center_y': 0.5}
                                                    background_color: metricButtonColor
                                                    on_release: app.setAuthentication('M')

                                            MDBoxLayout:

                                                Button:
                                                    text: "Single"
                                                    size_hint: buttonSizeHint
                                                    pos_hint: {'center_x': 0.5,'center_y': 0.5}
                                                    background_color: metricButtonColor
                                                    on_release: app.setAuthentication('S')

                                            MDBoxLayout:

                                                Button:
                                                    text: "None"
                                                    size_hint: buttonSizeHint
                                                    pos_hint: {'center_x': 0.5,'center_y': 0.5}
                                                    background_color: metricButtonColor
                                                    on_release: app.setAuthentication('N')

                            # Right Box for Impact Metrics
                            MDBoxLayout:
                                orientation: 'vertical'
                                padding: 15

                                # Metrics
                                MDBoxLayout:
                                    orientation: 'vertical'

                                   # Container for Confidentiality Impact Metrics
                                    MDBoxLayout:
                                        orientation: 'vertical'
                                        padding: containerPadding
                                        
                                        MDBoxLayout:
                                            size_hint_y: 0.3
                                            md_bg_color: metricLabelBackground
                                            spacing: 10
                                            
                                            MDIcon:
                                                size_hint_x: 0.40
                                                icon: 'shield-account'
                                                halign: 'right'
                                                theme_text_color: "Custom"
                                                text_color: white

                                            MDLabel:
                                                size_hint_x: 0.6
                                                halign: 'left'
                                                markup: True
                                                text: '[b]Confidentiality Metric[/b]'
                                                theme_text_color: "Custom"
                                                text_color: metricLabelTextColor
                                                md_bg_color: metricLabelBackground

                                        MDBoxLayout:
                                            size_hint_y: 0.6
                                            spacing: 20
                                            padding: 10
                                            md_bg_color: metricContainerBackground

                                            MDBoxLayout:

                                                Button:
                                                    text: "None"
                                                    size_hint: buttonSizeHint
                                                    pos_hint: {'center_x': 0.5,'center_y': 0.5}
                                                    background_color: metricButtonColor
                                                    on_release: app.setConfidentialityImpact('N')

                                            MDBoxLayout:

                                                Button:
                                                    text: "Partial"
                                                    size_hint: buttonSizeHint
                                                    pos_hint: {'center_x': 0.5,'center_y': 0.5}
                                                    background_color: metricButtonColor
                                                    on_release: app.setConfidentialityImpact('P')

                                            MDBoxLayout:

                                                Button:
                                                    text: "Complete"
                                                    size_hint: buttonSizeHint
                                                    pos_hint: {'center_x': 0.5,'center_y': 0.5}
                                                    background_color: metricButtonColor
                                                    on_release: app.setConfidentialityImpact('C')


                                    # Container for Integrity Impact Metric
                                    MDBoxLayout:
                                        orientation: 'vertical'
                                        padding: containerPadding

                                        MDBoxLayout:
                                            size_hint_y: 0.3
                                            md_bg_color: metricLabelBackground
                                            spacing: 10
                                            
                                            MDIcon:
                                                size_hint_x: 0.40
                                                icon: 'briefcase-check'
                                                halign: 'right'
                                                theme_text_color: "Custom"
                                                text_color: white

                                            MDLabel:
                                                size_hint_x: 0.6
                                                halign: 'left'
                                                markup: True
                                                text: '[b]Integrity Metric[/b]'
                                                theme_text_color: "Custom"
                                                text_color: metricLabelTextColor
                                                md_bg_color: metricLabelBackground

                                        MDBoxLayout:
                                            size_hint_y: 0.6
                                            spacing: 20
                                            padding: 10
                                            md_bg_color: metricContainerBackground


                                            MDBoxLayout:

                                                Button:
                                                    text: "None"
                                                    size_hint: buttonSizeHint
                                                    pos_hint: {'center_x': 0.5,'center_y': 0.5}
                                                    background_color: metricButtonColor
                                                    on_release: app.setIntegrityImpact('N')


                                            MDBoxLayout:

                                                Button:
                                                    text: "Partial"
                                                    size_hint: buttonSizeHint
                                                    pos_hint: {'center_x': 0.5,'center_y': 0.5}
                                                    background_color: metricButtonColor
                                                    on_release: app.setIntegrityImpact('P')


                                            MDBoxLayout:

                                                Button:
                                                    text: "Complete"
                                                    size_hint: buttonSizeHint
                                                    pos_hint: {'center_x': 0.5,'center_y': 0.5}
                                                    background_color: metricButtonColor
                                                    on_release: app.setIntegrityImpact('C')



                                    # Container for Availability Impact Metric
                                    MDBoxLayout:
                                        orientation: 'vertical'
                                        padding: containerPadding

                                        MDBoxLayout:
                                            size_hint_y: 0.3
                                            md_bg_color: metricLabelBackground
                                            spacing: 10
                                            
                                            MDIcon:
                                                size_hint_x: 0.40
                                                icon: 'database-arrow-up'
                                                halign: 'right'
                                                theme_text_color: "Custom"
                                                text_color: white

                                            MDLabel:
                                                size_hint_x: 0.6
                                                halign: 'left'
                                                markup: True
                                                text: '[b]Availability Metric[/b]'
                                                theme_text_color: "Custom"
                                                text_color: metricLabelTextColor
                                                md_bg_color: metricLabelBackground

                                        MDBoxLayout:
                                            size_hint_y: 0.6
                                            spacing: 20
                                            padding: 10
                                            md_bg_color: metricContainerBackground

                                            MDBoxLayout:

                                                Button:
                                                    text: "None"
                                                    size_hint: buttonSizeHint
                                                    pos_hint: {'center_x': 0.5,'center_y': 0.5}
                                                    background_color: metricButtonColor
                                                    on_release: app.setAvailabilityImpact('N')

                                            MDBoxLayout:

                                                Button:
                                                    text: "Partial"
                                                    size_hint: buttonSizeHint
                                                    pos_hint: {'center_x': 0.5,'center_y': 0.5}
                                                    background_color: metricButtonColor
                                                    on_release: app.setAvailabilityImpact('P')

                                            MDBoxLayout:

                                                Button:
                                                    text: "Complete"
                                                    size_hint: buttonSizeHint
                                                    pos_hint: {'center_x': 0.5,'center_y': 0.5}
                                                    background_color: metricButtonColor
                                                    on_release: app.setAvailabilityImpact('C')


                        # Vector Display Portion
                        MDBoxLayout:
                            size_hint_y: 0.15

                            MDLabel:
                                id: calcVector
                                halign: 'center'
                                markup: True
                                font_size: 25
                                theme_text_color: "Custom"
                                text_color: lightBlue
                                text: 'CVSS Vector: AV:L/AC:H/Au:M/C:N/I:N/A:N'